<p id="notice"><%= notice %></p>

<h1>Listing Book Genres</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_genres.each do |book_genre| %>
      <tr>
        <td><%= book_genre.Book %></td>
        <td><%= book_genre.Genre %></td>
        <td><%= link_to 'Show', book_genre %></td>
        <td><%= link_to 'Edit', edit_book_genre_path(book_genre) %></td>
        <td><%= link_to 'Destroy', book_genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

